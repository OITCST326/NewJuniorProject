}

<link href="~/Content/Application.css" rel="stylesheet" />

@section scripts{
    @Scripts.Render("~/bundles/jqueryui")
    <script src="~/Scripts/knockout-3.1.0.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/application.js"></script>
    <script type="text/javascript">
        Application.SaveUrl = '@Url.Action("SaveApplicationDetails", "Application")';
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.Application)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.Applicant)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.Job)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.ApplicantQuestionAnswer)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.Education)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.JobHistory)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.Hour)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.Reference)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.User)));
        Application.ViewModel = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model.PersonalInfo)));
    </script>
}

