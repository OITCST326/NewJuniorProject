@model AIM.Admin.Web.AdministrativeServiceReference.User

@{
    ViewBag.Title = "Delete";
}


<!-- This view's content starts HERE-->
<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Home</a><span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Action("Index", "User")">Users</a><span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Action("Delete", "User")">Delete User</a>
        </li>
    </ul>
</div>

<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well">
            <h2><i class="icon-info-sign"></i> USERS</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <h2>Delete User</h2>

            <h3>Are you sure you want to delete this user?</h3>
            <div>
                <dl class="dl-horizontal">
                    
                    <dt>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>


                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.MiddleName)
                    </dt>


                    <dd>
                        @Html.DisplayFor(model => model.MiddleName)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.LastName)
                    </dt>


                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>


                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.SocialSecurityNumber)
                    </dt>


                    <dd>
                        @Html.DisplayFor(model => model.SocialSecurityNumber)
                    </dd>

                </dl>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.PersonalInfoId)
                    @Html.HiddenFor(model => model.ApplicantId)
                    @Html.HiddenFor(model => model.ApplicationId)
                    @Html.HiddenFor(model => model.EmployeeId)
                    @Html.HiddenFor(model => model.UserName)
                    @Html.HiddenFor(model => model.Password)
                    @Html.HiddenFor(model => model.AspNetUsersId)


                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>

            <div class="clearfix"></div>
        </div>
    </div>
</div>