@model IEnumerable<AIM.Service.Entities.Models.Question>

@{
    ViewBag.Title = "Index";
}


<!-- This view's content starts HERE-->
<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Home</a><span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Action("Index", "Question")">Questions</a>
        </li>
    </ul>
</div>

<div>
    <a class="btn btn-success" href="@Url.Action("Create", "Question")">
        <i class="icon-plus icon-white"></i><i class="icon-question-sign icon-white"></i>
        Create New
    </a>
</div>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-question-sign"></i> QUESTIONS</h2>
            <div class="box-icon">
                @*<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>*@
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>

        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.qJsonProperties)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.questionnaireId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.interviewQuestionsId)
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="center">
                                @Html.DisplayFor(modelItem => item.qJsonProperties)
                            </td>
                            <td class="center">
                                @Html.DisplayFor(modelItem => item.questionnaireId)
                            </td>
                            <td class="center">
                                @Html.DisplayFor(modelItem => item.interviewQuestionsId)
                            </td>
                            <td class="center">
                                <div>
                                    <a class="btn btn-success" href="@Url.Action("Edit", "Question", new { id = item.questionId})">
                                        <i class="icon-zoom-in icon-white"></i>
                                        Edit
                                    </a>
                                </div>
                            </td>
                            <td class="center">
                                <div>
                                    <a class="btn btn-info" href="@Url.Action("Details", "Question", new { id = item.questionId})">
                                        <i class="icon-edit icon-white"></i>
                                        Details
                                    </a>
                                </div>
                            </td>
                            <td class="center">
                                <div>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Question", new { id = item.questionId})">
                                        <i class="icon-trash icon-white"></i>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
            </table>
            <div class="clearfix"></div>
        </div>
    </div>
</div>