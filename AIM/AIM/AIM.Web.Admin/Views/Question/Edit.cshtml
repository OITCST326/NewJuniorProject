@model AIM.Service.Entities.Models.Question


@{
    ViewBag.Title = "Edit";
}

<!-- This view's content starts HERE-->
<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Home</a><span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Action("Index", "Question")">Questions</a><span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Action("Edit", "Question")">Edit Question</a>
        </li>
    </ul>
</div>

<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well">
            <h2><i class="icon-info-sign"></i> QUESTIONS</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <h2>Edit Question</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.questionId)
                    
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.qJsonText, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.qJsonText)
                            @Html.ValidationMessageFor(model => model.qJsonText)
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.qJsonText, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.qJsonText)
                            @Html.ValidationMessageFor(model => model.qJsonText)
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.interviewQuestionsId, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.interviewQuestionsId)
                            @Html.ValidationMessageFor(model => model.interviewQuestionsId)
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }


            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

            <div class="clearfix"></div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

